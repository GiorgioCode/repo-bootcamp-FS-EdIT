{
    // Visit https://aka.ms/tsconfig to read more about this file
    "compilerOptions": {
        // File Layout
        "rootDir": "src", //DONDE ESTAN LOS ARCHIVOS DE .ts
        "outDir": "dist", //DONDE VAN A ESTAR LOS ARCHIVOS .js GENERADOS

        // Environment Settings
        // See also https://aka.ms/tsconfig/module
        "module": "commonjs", // Sistema de modulos (commonjs para Node, ESNext para frontend puro)
        "target": "ES2018", // A que verision de JS vamos a transpilar
        "types": [],
        // For nodejs:
        // "lib": ["esnext"],
        // "types": ["node"],
        // and npm install -D @types/node

        // Other Outputs
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,

        // Stricter Typechecking Options
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,

        // Style Options
        // "noImplicitReturns": true,
        // "noImplicitOverride": true,
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        // "noFallthroughCasesInSwitch": true,
        // "noPropertyAccessFromIndexSignature": true,

        // Recommended Options
        "strict": true, // ACTIVA TODAS LAS REGLAS ESTRITAS (ESENCIAL)
        "noImplicitAny": true, // Prohibe que algo que sea "any" si no lo dices explicitamente
        "strictNullChecks": true, //'null' y 'undefined' sin ser ignorados. Son valores que tenemos que manejar.
        "isolatedModules": true,
        "noUncheckedSideEffectImports": true,
        "moduleDetection": "force",
        "skipLibCheck": true
    },
    "include": ["src"]
}
