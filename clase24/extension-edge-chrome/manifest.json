{
    "manifest_version": 3,
    "name": "Gestor de Notas Rápidas",
    "version": "1.0",
    "description": "Extensión para gestionar notas rápidas directamente desde el navegador.",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "permissions": ["storage"],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
